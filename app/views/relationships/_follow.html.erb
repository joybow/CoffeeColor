<div class= "pl-2 pr-2 py-2">フォロー数: <%= list.followings.count %></div>
<div class= "pl-2 pr-2 py-2">フォロワー数: <%= list.followers.count %></div>
<% if current_user != list %>
  <% if current_user.followings?(list) %>
    <%= link_to "フォロー外す", user_relationships_path(user_id: list.id), method: :delete,class: "btn btn-info", remote: true %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user_id: list.id), method: :post,class: "btn btn-success", remote: true%>
  <% end %>
<% end %>