<div class="container center-block">
  <h4>イベント作成</h4>  
  <%= form_with(model: @task, url: tasks_path, method: :post, local: true) do |form| %>
    <%= form.datetime_field :start_time, class: 'w-25'%>
    <%= form.label "タイトル" %><br>
    <%= form.text_field :title, class: 'w-50'%><br>
    <%= form.label "内容", class: 'pt-2' %>
    <%= form.text_field :content, class: 'form-control'%><br>
    <%= form.submit "イベントを作成", class: 'btn btn-primary'%>
  <% end %>
  <br>
  <h4>登録イベントリスト</h4>
  <div class= "row d-flex align-items-center">
    <% @user_task.each do |task|%>
    <div class="col-8 md-4 mb-3">
      <%= I18n.l(task.start_time.to_date, format: :long) %>
      <%= task.title %>
      <%= task.content %>
      <%= link_to "削除", task_path(task), method: :delete, class: "btn btn-outline-primary btn-sm ml-3 "%>
    </div>
    <% end %>
  </div>

</div>
