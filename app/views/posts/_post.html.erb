<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.content %></p>
    <% if post.post_images.attached? %>
      <% post.post_images.each do |img| %>
      <%= image_tag img, size: "32x32"%>
      <% end %>
    <% end %>
    <br>
    <%= link_to '表示', post, class: "btn btn-outline-primary" %>
    <%= link_to '編集', edit_post_path(post), class: "btn btn-outline-primary" %>
    <%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger" %>
  </div>
</div>