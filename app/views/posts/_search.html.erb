<div class="search_form">
  <%= form_with url: search_result_posts_path(post), local: true, method: :get do |f|%>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([[('両方')],[('タイトル')],[('内容')]])%>
    <%= f.select :search, options_for_select([["前方一致", "forward_match"],
    ["後方一致","backword_match"],["部分一致","partial_match"]])%>
    <%= f.submit "検索", class: "btn btn-primary"%>
  <% end %>
</div>