<% if user.present? %>
  <h4 class= "text-primary">フォローしているユーザー</h4>
  <div class= "border-top border-bottom">
    <% user.each do |user| %>
      <table>
        <thead>
          <tr>
            <th>名前</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to user.name, user_path(user) %></td>
            <td>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
<% else %>
  <p>フォローしているユーザーはいません</p>
<% end %>
