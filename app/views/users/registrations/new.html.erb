<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3 mb-3">新規会員登録</h3>

        <hr>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group row">

          <%= f.label :name, "", class: "col-md-5 col-form-label text-md-left" do %>
            氏名
            <span class="ml-1 CoffeeColor-require-input-label">
              <span class="CoffeeColor-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :name,
              class: "form-control #{"is-invalid" if resource.errors.messages[:name].present? } CoffeeColor-login-input",
              autofocus: "true",
              required: "",
              autocomplete: "name",
              placeholder: "エディ コーフィー"
            %>

            <% if resource.errors.messages[:name].present? %>
              <span class="CoffeeColor-error-message">
                <strong><%= resource.errors.full_messages_for(:name).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row ">

          <%= f.label :is_roaster, "", class: "col-md-5 col-form-label text-md-left" do %>
            あなたの区分
            <span class="ml-1 CoffeeColor-require-input-label">
              <span class="CoffeeColor-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7 ">
            <%=
              f.select :is_roaster, User.enum_options_for_select(:is_roaster),
              class: "form-control  #{"is-invalid" if resource.errors.messages[:is_roaster].present? } CoffeeColor-login-input"
            %>

            <% if resource.errors.messages[:is_roaster].present? %>
              <span class="CoffeeColor-error-message">
                <strong><%= resource.errors.full_messages_for(:is_roaster).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, "", class: "col-md-5 col-form-label text-md-left" do %>
          メールアドレス
            <span class="ml-1 CoffeeColor-require-input-label">
              <span class="CoffeeColor-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.email_field :email,
              class: "form-control #{"is-invalid" if resource.errors.messages[:email].present? } CoffeeColor-login-input",
              autofocus: "true",
              required: "",
              autocomplete: "email",
              placeholder: "メールアドレス"
            %>

            <% if resource.errors.messages[:email].present? %>
              <span class="CoffeeColor-error-message">
                <strong><%= resource.errors.full_messages_for(:email).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :postal_code, "", class: "col-md-5 col-form-label text-md-left" do %>
          郵便番号
            <span class="ml-1 CoffeeColor-require-input-label">
              <span class="CoffeeColor-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :postal_code,
              class: "form-control #{"is-invalid" if resource.errors.messages[:postal_code].present? } CoffeeColor-login-input",
              required: "",
              placeholder: "150-0043"
            %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :local, "", class: "col-md-5 col-form-label " do %>
          地域
            <span class="ml-1 CoffeeColor-require-input-label">
              <span class="CoffeeColor-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7 ">
            <%=
              f.select :local, User.enum_options_for_select(:local),
              class: "form-control  #{"is-invalid" if resource.errors.messages[:local].present? } CoffeeColor-login-input"
            %>

            <% if resource.errors.messages[:local].present? %>
              <span class="CoffeeColor-error-message">
                <strong><%= resource.errors.full_messages_for(:is_roaster).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :address, "", class: "col-md-5 col-form-label text-md-left" do %>
          住所
            <span class="ml-1 CoffeeColor-require-input-label">
              <span class="CoffeeColor-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :address,
              class: "form-control #{"is-invalid" if resource.errors.messages[:address].present? } CoffeeColor-login-input",
              required: "",
              placeholder: "東京都渋谷区道玄坂２丁目１１−１"
            %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :phone, "", class: "col-md-5 col-form-label text-md-left" do %>
          電話番号
            <span class="ml-1 CoffeeColor-require-input-label">
              <span class="CoffeeColor-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :phone,
              class: "form-control #{"is-invalid" if resource.errors.messages[:phone].present? } CoffeeColor-login-input",
              required: "",
              placeholder: "03-5790-9039"
            %>
          </div>
        </div>
        
        <div class="mt-3 mb-5 <%= @user.errors.include?(:user_image) ? "validation_errors" : ""%>">
          <%# 画像の追記 %>
          <%= f.label :user_image, '画像(5MBまで)', class: "form-label fw-bold"%><br>
          <%= f.file_field :user_image, onchange: "userImage(this);", accept: "image/jpeg,image/gif,image/png", class: "mb-3"%>
          
          <div id="user_image">
            <img id="user_image_preview" class="mb-3" width="100">
          </div>
          <% if @user.user_image.present? %>
            <span><b>[現在の画像]</b></span>
            <p class="text-danger font09">※削除する場合は画像にチェックを入れてから更新をしてください。</p><br>
            <div class="form-check">
              <%= f.check_box :user_image_id, {class: "form-check-input", id: "user_image-image-check"},@user.user_image.id, false%>
              <label class="form-check-label" for="user_image-image-check">
                <%= image_tag @user.user_image, width: 200, class: "mb-2"%>
              </label>
            </div>
          <% end %>
        </div>

        <div class="form-group row">
          <%= f.label :password, "", class: "col-md-5 col-form-label text-md-left" do %>
          パスワード
            <span class="ml-1 CoffeeColor-require-input-label">
              <span class="CoffeeColor-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.password_field :password,
              class: "form-control #{ "is-invalid" if resource.errors.messages[:password].present? } CoffeeColor-login-input",
              autofocus: "true"
            %>
            <% if resource.errors.messages[:password].present? %>
            <span class="CoffeeColor-error-message">
              <strong><%= resource.errors.full_messages_for(:password).first %></strong>
            </span>
            <% end %>
            </div>
          </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "", class: "col-md-5 col-form-label text-md-left" do %>
          <% end %>
          <div class="col-md-7">
            <%=
              f.password_field :password_confirmation,
              class: "form-control CoffeeColor-login-input",
              autocomplete: "new-password"
            %>
          </div>
        </div>
        
        <div class="form-group">
          <button type="submit" class="btn CoffeeColor-submit-button w-100">
            アカウント作成
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  function userImage(obj){
    var fileReader = new FileReader();
    fileReader.onload = (function(){
      document.getElementById('user_image_preview').src = fileReader.result;
    });
    fileReader.readAsDataURL(obj.files[0]);
  }
</script>